{
    "name": "jonnypickett/eloquent-sti",
    "type": "library",
    "description": "Single Table Inheritance for Eloquent ORM",
    "keywords": [
        "eloquent-sti",
        "laravel",
        "eloquent",
        "single-table-inheritance",
        "trait"
    ],
    "homepage": "https://github.com/jonnypickett/eloquent-sti",
    "license": "MIT",
    "authors": [
        {
            "name": "Jonathan Pickett",
            "email": "jonathanpickett@me.com"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "laravel/framework": "5.3",
        "laravel/laravel": "^5.3",
        "phpunit/phpunit": "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "JonnyPickett\\EloquentSTI\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JonnyPickett\\EloquentSTI\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev",
    "config": {
        "sort-packages": true
    }
}
